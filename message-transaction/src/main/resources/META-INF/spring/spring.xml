<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:datasource="http://www.message.com/schema/message-datasource"
	   xmlns:mybatis="http://www.message.com/schema/message-mybatis"
	   xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.message.com/schema/message-mybatis
    http://www.message.com/schema/message-mybatis/message-mybatis-1.0.xsd
    http://www.message.com/schema/message-datasource
    http://www.message.com/schema/message-datasource/message-datasource-1.0.xsd">

	<context:component-scan base-package="message.transaction"/>
	<context:annotation-config/>

	<!-- 数据源 -->
	<datasource:rdbms name="transaction"/>
	<mybatis:mybatis dataSource="transaction" basePackage="message.transaction" dbType="MySQL"
					 typeHandlersLocations="message.transaction.enums.types"/>

</beans>