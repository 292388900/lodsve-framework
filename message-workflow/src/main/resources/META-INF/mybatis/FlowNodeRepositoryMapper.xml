<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="message.workflow.repository.FlowNodeRepository">
    <select id="findByFlowId" resultType="message.workflow.domain.FlowNode" parameterType="Long">
        SELECT * FROM t_flow_node WHERE flow_id = #{flowId}
    </select>

    <select id="loadByFlowIds" resultType="message.workflow.domain.FlowNode" parameterType="List">
        SELECT * FROM t_flow_node WHERE flow_Id IN
        <foreach collection="flowIds" item="flowId" index="index" separator="," open="(" close=")">
            #{flowId}
        </foreach>
    </select>
</mapper>